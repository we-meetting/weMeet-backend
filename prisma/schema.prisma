generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  id          String      @id @default(uuid())
  email     String   @unique @db.VarChar(255)
  password  String
  name      String?
  role      Role     @default(GUEST)
}

enum Role {
  ADMIN
  USER
  GUEST
}
